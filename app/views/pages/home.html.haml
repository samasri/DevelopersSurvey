.container
	= link_to 'Take Survey!', survey_bg_path, class: 'btn btn-primary'
-#
	.container
		- if @tasks.empty?
			%span.text-warning There are not tasks
		- else
			%table.table.table-hover.table-bordered
				%thread
					%tr
						%th Title
						%th Created at
						%th Completed
					%tbody
						- @tasks.each do |task|
							%tr
								%td
									%strong= task.title
								%td.text-info= task.created_at
								%td.text-success= task.completed
	#modal.modal.fade
